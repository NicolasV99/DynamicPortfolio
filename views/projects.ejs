<%- include('partials/header') %>

<section class="container">
    <h1 class="section-title">Recent Projects</h1>
    <p class="section-subtitle">A selection of websites I have designed and developed.</p>

    <div class="project-grid">
        <% projectList.forEach(function(project) { %>
            <div class="card project-card">
                <div class="card-image" style="background-image: url('<%= project.image %>');"></div>
                
                <div class="card-content">
                    <h3><%= project.title %></h3>
                    <p><%= project.description %></p>
                    
                    <a href="<%= project.url %>" target="_blank" class="btn-small">
                        Visit Website <i class="fa-solid fa-external-link-alt"></i>
                    </a>
                </div>
            </div>
        <% }); %>
    </div>
</section>

<%- include('partials/footer') %>