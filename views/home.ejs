<%- include('partials/header') %>

<section class="hero">
    <div class="hero-content">
        <h1>Hi, I'm Nicolas</h1>
        <h2>Passionate Web Developer</h2>
        <p>
            I am a passionate Web Developer with over two years of experience in designing and managing websites. 
            I have a strong background in HTML, CSS, JavaScript, and have worked with Python, Java, and C++.
        </p>
        <p>
            My job is to build your website so that it is functional, user-friendly, and attractive. 
            I add a personal touch to your product to ensure it is eye-catching and easy to use.
        </p>
        <div class="hero-buttons">
            <a href="/contact" class="btn">Hire Me</a>
            <a href="/projects" class="btn btn-outline">View Projects</a>
        </div>
    </div>
</section>

<section class="section skills-section">
    <h3 class="section-title">Technical Skills</h3>
    <div class="skills-grid">
        <% skillsList.forEach(function(skill) { %>
            <div class="skill-card">
                <i class="fa-solid fa-code"></i>
                <span><%= skill %></span>
            </div>
        <% }); %>
    </div>
</section>

<section class="section experience-section">
    <h3 class="section-title">Professional Experience</h3>
    <div class="experience-container">
        <% experienceList.forEach(function(job) { %>
            <div class="experience-card">
                <div class="exp-header">
                    <div>
                        <h4><%= job.role %></h4>
                        <span class="company-name"><i class="fa-solid fa-building"></i> <%= job.company %></span>
                    </div>
                    <div class="exp-meta">
                        <span class="exp-date"><i class="fa-regular fa-calendar"></i> <%= job.date %></span>
                        <span class="exp-type"><i class="fa-solid fa-laptop-house"></i> <%= job.type %></span>
                    </div>
                </div>
                <ul class="exp-bullets">
                    <% job.bullets.forEach(function(bullet) { %>
                        <li><%= bullet %></li>
                    <% }); %>
                </ul>
            </div>
        <% }); %>
    </div>
</section>

<%- include('partials/footer') %>